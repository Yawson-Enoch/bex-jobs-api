{
  "name": "jobs-api",
  "version": "1.0.0",
  "description": "Jobs API to manage your recent job searches",
  "main": "src/app.ts",
  "scripts": {
    "start:prod": "NODE_ENV=production node dist/app.js",
    "start:dev": "node dist/app.js",
    "local:prod": "NODE_ENV=production ts-node-dev --respawn --transpile-only src/app.ts",
    "local:dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build:prod": "pnpm install && tsc && cp -r src/public dist",
    "build:dev": "tsc && cp -r src/public dist",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\"",
    "prettier": "prettier --check \"**/*.+(js|ts|json|yml|yaml|md|html|css)\"",
    "prettier:fix": "prettier --write \"**/*.+(js|ts|json|yml|yaml|md|html|css)\"",
    "prepare": "husky install"
  },
  "keywords": [
    "jobs",
    "api"
  ],
  "author": "enock kwabena yawson",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "xss-clean": "^0.1.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
