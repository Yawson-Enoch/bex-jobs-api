generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  firstName String
  lastName  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
   @@map("users")
}

model Job {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  company     String
  jobLocation String
  jobPosition String
  jobStatus   String
  jobType     String
  createdBy   String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
   @@map("jobs")
}

